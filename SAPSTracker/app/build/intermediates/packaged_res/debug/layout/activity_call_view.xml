<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Call_View_Activity">

    <TextView
        android:id="@+id/txt_status_of_call"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:text="   calling..."
        android:textColor="@color/black"
        android:textSize="22dp" />
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/img_user"
        android:scaleType="centerCrop"
        android:layout_below="@id/txt_status_of_call"
        android:src="@drawable/baseline_person_24"
        />

    <TextView
        android:id="@+id/txt_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:gravity="center"
        android:layout_below="@id/img_user"
        android:layout_centerHorizontal="true"
        android:text="+27 69 368 7584"
        android:textColor="@color/black"
        android:textSize="32dp" />

    <com.google.android.gms.maps.MapView
        android:layout_width="match_parent"
        android:layout_below="@id/txt_number"
        android:layout_margin="25dp"
        android:layout_above="@id/btm"
        android:layout_height="match_parent"/>

<include
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:id="@+id/btm"
    android:layout_alignParentBottom="true"
    layout="@layout/bottom_call_navigation"/>
</RelativeLayout>