<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:padding="10dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/btn_mute"
            android:layout_width="0dp"
            android:layout_marginTop="5dp"
            android:backgroundTint="@color/gray"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_gravity="center"
            app:icon="@drawable/baseline_volume_off_24"
            app:iconSize="40dp"
            app:iconTint="@color/white" />

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/btn_loud_speaker"
            android:layout_width="0dp"
            android:backgroundTint="@color/gray"
            android:layout_marginStart="15dp"
            app:iconSize="40dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_height="wrap_content"
            app:icon="@drawable/baseline_volume_up_24"
            app:iconTint="@color/white" />


        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/btn_dail"
            android:layout_marginTop="5dp"
            android:layout_width="0dp"
            app:iconGravity=""
            android:backgroundTint="@color/white"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="5dp"
            app:iconSize="40dp"
            android:layout_height="wrap_content"
            app:icon="@drawable/baseline_dialpad_24"
            app:iconTint="@color/blue" />

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/btn_record"
            android:layout_marginTop="5dp"
            app:iconSize="40dp"
            android:backgroundTint="@color/gray"
            android:layout_width="0dp"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="5dp"
            android:layout_height="wrap_content"
            app:icon="@drawable/baseline_record_voice_over_24"
            app:iconTint="@color/white" />

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/btn_hangUp"
            app:iconSize="40dp"
            android:backgroundTint="@color/red"
            android:layout_width="0dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="15dp"
            android:layout_height="wrap_content"
            app:icon="@drawable/baseline_call_end_24"
            app:iconTint="@color/white" />
    </LinearLayout>


</RelativeLayout>